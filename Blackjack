hello-world/Blackjack
var cardsDrawn = [];
var dealerValueLow = 0;
var dealerValueHigh = 0;
var playerValueLow = 0;
var playerValueHigh = 0;

function Card(){
    this.name = false;
    this.type = false;
    this.value = false;
    this.owner = false;
} //closes Card object

Card.prototype.pickValue = function(){
    var random = Math.random();
    if(random<1/13){
        this.value = 1;
        this.name = "Ace";
    }else if(random<2/13){
        this.value = 2;
        this.name = "Two";
    }else if(random<3/13){
        this.value = 3;
        this.name = "Three";
    }else if(random<4/13){
        this.value = 4;
        this.name = "Four";
    }else if(random<5/13){
        this.value = 5;
        this.name = "Five";
    }else if(random<6/13){
        this.value = 6;
        this.name = "Six";
    }else if(random<7/13){
        this.value = 7;
        this.name = "Seven";
    }else if(random<8/13){
        this.value = 8;
        this.name = "Eight";
    }else if(random<9/13){
        this.value = 9;
        this.name = "Nine";
    }else if(random<10/13){
        this.value = 10;
        this.name = "Ten";
    }else if(random<11/13){
        this.value = 10;
        this.name = "Jack";
    }else if(random<12/13){
        this.value = 10;
        this.name = "Queen";
    }else{
        this.value = 10;
        this.name = "King";
    } //closes if-else-if-else loop
} //closes pickValue method

Card.prototype.pickSuit = function(){
    var random = Math.random();
    if(random<1/4){
        this.type = "Hearts";
    }else if(random<2/4){
        this.type = "Spades";
    }else if(random<3/4){
        this.type = "Clubs";
    }else{
        this.type = "Diamonds";
    } //closes if-else-if-else loop
} //closes pickSuit method

Card.prototype.checkDrawn = function(cardsDrawn,name,type){
    var prevDrawn = false;
    for(var i=0;i<cardsDrawn.length;i++){
        if((cardsDrawn[i].name == this.name)&&(cardsDrawn[i].type==this.type)){
            prevDrawn = true;
        } //closes if
    } //closes for
    return prevDrawn;
} //closes checkDrawn method

var newCard = function(owner, hole){
    var card = new Card();
    var hole = hole;
    card.pickSuit();
    card.pickValue();
    if(owner=="player"){
        card.owner = "player";
    }else if(owner=="dealer"){
        card.owner = "dealer";
    } //closes if-else-if
    //console.log(card.name);
    if(card.checkDrawn(cardsDrawn,card.name,card.type)
    ==false && hole == false){
        console.log("The " + card.owner + " drew a " + card.name + " of " + card.type + ".");
        cardsDrawn[cardsDrawn.length] = card;
    }else if(card.checkDrawn(cardsDrawn,card.name,card.type)==false && hole == true){
        console.log("The dealer drew a hole card.");
        cardsDrawn[cardsDrawn.length] = card;
    }else{
        newCard(owner,hole);
    } //closes if-else-if-else
} //closes newCard function

var calcValue = function(){
    dealerValueLow = 0;
    dealerValueHigh = 0;
    playerValueLow = 0;
    playerValueHigh = 0;
    for(i=0;i<cardsDrawn.length;i++){
        if(cardsDrawn[i].name == "Ace"){
            cardsDrawn[i].value = 1;
        } //closes if which checks for Aces
        if(cardsDrawn[i].owner == "player"){
            playerValueLow = playerValueLow + cardsDrawn[i].value;
        }else if(cardsDrawn[i].owner == "dealer"){
            dealerValueLow = dealerValueLow + cardsDrawn[i].value;
        } //closes if-else-if
    } //closes for
    for(i=0;i<cardsDrawn.length;i++){
        if(cardsDrawn[i].name == "Ace"){
            cardsDrawn[i].value = 11;
        } //closes if which checks for Aces
        if(cardsDrawn[i].owner == "player"){
            playerValueHigh = playerValueHigh +cardsDrawn[i].value;
        } else if(cardsDrawn[i].owner == "dealer"){
            dealerValueHigh = dealerValueHigh + cardsDrawn[i].value;
        } //closes if which assigns high value
    } //closes for
} //closes calcValue function

newCard("player", false);
newCard("dealer", false); //change this back to true to hide the hole card
newCard("player", false);
newCard("dealer", false);
calcValue();

var dealerGameComplete = false;
var playerGameComplete = false;
var playerDrawComplete = false;

while(playerGameComplete==false||dealerGameComplete==false){
    playerDrawComplete = false;
    while(playerGameComplete == false&&playerDrawComplete == false&&playerValueLow<21&&playerValueHigh!=21){
        var draw = prompt("Pick one:  1) Hit, or 2) Stay.");
        if(draw == "1"){
            newCard("player", false);
            playerDrawComplete = true;
        }else if(draw == "2"){
            playerDrawComplete = true;
            playerGameComplete = true;
        }else{
        console.log("Please choose a valid option.");
        } //closes if-else-if-else
    } //closes while loop
    calcValue();
    if(playerValueLow>=21){
        playerGameComplete = true;
    }else if(playerValueHigh ==21){
        playerGameComplete = true;
    } //closes if-else-if
    if(dealerValueHigh==21){
        dealerGameComplete = true;
    }else if(dealerValueLow==21){
        dealerGameComplete = true;
    }else if(playerValueLow>21){
        dealerGameComplete = true;
    }else if(dealerValueHigh<playerValueHigh&&playerValueHigh<=21){
        newCard("dealer",false);
    }else if(dealerValueHigh<playerValueLow&&playerValueLow<=21){
        newCard("dealer",false);
    }else if(dealerValueLow<playerValueHigh&&playerValueHigh<=21){
        newCard("dealer",false);
    }else if(dealerValueLow<playerValueLow&&playerValueLow<=21){
        newCard("dealer",false);
    } //closes if-else-if-else-if...
    calcValue();
    if(dealerValueLow>playerValueLow&&dealerValueLow>playerValueHigh){
        dealerGameComplete = true;
    }else if(dealerValueHigh>playerValueHigh&&dealerValueHigh<=21){
        dealerGameComplete = true;
    } //close if-else-if
} //closes while loop

console.log("The player's low value is: " + playerValueLow);
console.log("The player's high value is: " + playerValueHigh);

console.log("The dealer's low value is: " + dealerValueLow);
console.log("The dealer's high value is: " + dealerValueHigh);

//dealers win conditions not being properly evaluated
